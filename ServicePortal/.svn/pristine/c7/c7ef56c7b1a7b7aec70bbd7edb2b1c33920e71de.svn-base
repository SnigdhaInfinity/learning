.CssAmit {
    max-width: 900px !important;
}

#topology {
    width: 875px;
    height: 500px;
}

.cdk-overlay-container {
    z-index : 2000;
}
 
 .CssAmit .ng-star-inserted{ 
    border: 1px solid #d0cbcb;
    background: #f1f1f1;
    padding: 10px;
}

 table.dataTable.no-footer{border-bottom:none;}  

 .CssAmit .ng-star-inserted td{border:1px solid #bdbbbb;}

  .CssAmit .rowHeader th{
    background: #3078af;
    color: #fff;
}

.panel-group .panel{margin-bottom: 5px;}

.panel-title a {
    color: #177ab7;
    font-size: 16px;
    text-transform: capitalize;
}

 .panel-title .caret{
    float: right;
    margin-top: 8px;
    color: #2356cc;
}

  .panel-body{
   max-height: 200px;
    overflow-y: auto;
}

 .glyphicon.glyphicon-plus{
    color: #428a0e;
    font-size: 12px; 
    margin-top:2px;  
}

.sorting_1 a{float:left;width:90px;}
.ng-star-inserted .sorting_1 br{display:none;}
