@font-face {
    font-family: OpenSans-Regular;
    src: url("assets/fonts/OpenSans-Regular.ttf");
}

@font-face {
    font-family: OpenSans-Semibold;
    src: url("assets/fonts/OpenSans-Semibold.ttf");
}

body {
    font-family: "OpenSans-Regular", sans-serif;
    font-size: 13px;
    font-weight: normal;
    background: #fff;
}

h1 {
    color: #1a4766;
    margin: 29px 0 35px 0;
    border-bottom: 1px solid #e6e8ea;
    width: 100%;
    font-size: 20px;
    font-family: "OpenSans-Semibold", sans-serif;
}

h2 {
    font: bold 21px "OpenSans-Semibold", sans-serif;
    color: #daa508;
    margin: 16px 0 25px 16px;
    width: 80%;
}



h5{
   font: normal 18px "Calibri", sans-serif;
    color: #0cb8d6;
    margin: 16px 0 25px 16px;
    width: 97%;
    text-transform: capitalize;
    background: #e6f3f3;
    padding: 5px 10px;
    border-left: 3px solid;
}


:focus {
    outline: none;
}

a {
    color: #46b111;
    text-decoration: none;
}

a:focus, a:hover {
    text-decoration: none;
    outline: #e8e5e5;
}

.jsonButton {
    text-align: center;
    clear: both;
}

.SchoiceDiv > select {
    width: 200px;
}

.n-popupContainer {
    z-index: 9999;
}

.n-topology-tooltip {
    opacity: 1 !important;
}

