.bucket-area{margin-bottom:20px;}
.bucket-area a{color:#fff;}
.bucket-area a:hover{ box-shadow:3px 3px 1px #c5c5c5;}
.bucket-area img {float:left;margin:21px 27px 0 18px;}
.bucket-area h3{color:#fff;font:normal 20px "Calibri",sans-serif;font-weight:bold;
text-shadow: 0px 1px 1px #151414; margin-top:46px;float:left;}
.bucket-area p{width:100%; text-align:right; padding-right: 20px;
    display: block;float:left;}

.bucket-inventory{
  width:100%; 
  float: left;
  display:block;
  min-height:119px;
background: -webkit-linear-gradient(bottom left, #4099ff, #8bbcf5);
background: -o-linear-gradient(bottom left, #4099ff, #8bbcf5);
background: linear-gradient(to top right, #4099ff, #8bbcf5);
    border-radius: 5px;
    }

.bucket-demand{
    width:100%; 
    float: left;
    display:block;
    min-height:119px;
    background: linear-gradient(to top right, #f5cd3a, #f5ae49);
    border-radius: 5px;
    }


  .bucket-calender{
     width:100%; 
  float: left;
  display:block;
  min-height:119px;
  background: -webkit-linear-gradient(bottom left, #efd72e, #e6b624);
  background: -o-linear-gradient(bottom left, #efd72e, #e6b624);
  background: linear-gradient(to top right, #efd72e, #e6b624);
    border-radius: 5px;
    }

.bucket-upgrade{
    width:100%; 
    float: right;
    display:block;
    min-height:119px;
    border-radius: 5px;
    background: linear-gradient(45deg, #2ed8b6, #1ab999);
  }

.bucket-terminate{
    width:100%; 
    float: right;
    display:block;
    min-height:119px;
    border-radius: 5px;
    background: linear-gradient(45deg,#FF5370,#ff869a);
    }

.bucket-circuit{
    width:100%; 
    float: right;
    display:block;
    min-height:119px;
    border-radius: 5px;
    background: linear-gradient(45deg, #28af45, #50f55d);
    
  }