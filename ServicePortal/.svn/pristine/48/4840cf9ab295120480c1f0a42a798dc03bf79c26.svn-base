
header{background:#0d99ce; padding:1px 5px 1px 5px;z-index:999;width:100%;}
.navtabs{float:right;}
 .navtabs ul{margin:0px;padding:0px;list-style:none;} 
 .navtabs ul li{float:left;position:relative;z-index:9;}
 .navtabs ul li a{color:#fff;padding:10px 10px;display:block;line-height:31px;}
 .navtabs ul li a:hover{ background: #326790;}
.navtabs input[type="text"]{}
 .dropdown-menu{border-radius: 0px;
 background-color: #2467a0;padding: 0px 0 0px 0px;
 box-shadow: 3px 1px 9px rgba(0,0,0,.175);color:#fff;}

 .dropdown-toggle::after {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: .255em;
    vertical-align: .255em;
    content: "";
    border-top: .3em solid;
    border-right: .3em solid transparent;
    border-bottom: 0;
    border-left: .3em solid transparent;
}

.dropdown-menu a:hover {
    background: #3d90d0 !important;
}

.dropdown-menu a{ line-height: 21px !important;font-size:16px;}
.locationC {width: 270px;
    position: absolute;
    z-index:99;
    top: 52px;
    left: 0;
    background: #e0e3e3;
    padding: 8px 10px;    
    border: 1px solid #d7d7d7;
    }

.locationC li { margin:0; padding:0;width:100%;}

.locationC input {
    border:none;
    background:none;
    width:100%;
    padding-left:10px;
    padding-right:10px;
    line-height:33px;
    margin-top: 6px;
     }

  .closeBtn{position: absolute;
    top: -18px;
    right:-1px;
    z-index:999;
    color: #0480ec !important;
    font-size: 18px;
    font-weight: bold !important;    
}  

.closeBtn:hover{background:none !important;color:gray !important;}