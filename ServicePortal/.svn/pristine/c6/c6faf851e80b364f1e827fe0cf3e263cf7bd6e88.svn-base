
.login_logo  {
	background:#0d99ce;padding:1px 5px 1px 5px;
	text-align: left;

	img {max-width:100%;}

}

.loginBlock {
	    width: 500px;
     
    margin: 0 auto;
        background: #f1f1f1;
    padding: 23px 20px;
    margin-top: 76px;
    border: 1px solid #e2dfdf;
}

.loginAnchor{
	
    margin-bottom: 20px;}

.loginAnchor a {
	width: 136px;
    padding: 6px 10px;
    display: inline-block;
    text-align: center;
    font-size: 16px;
    text-transform: uppercase;
    color: #404663;
    background: #b0b3b5;
    border-radius: 3px;
    border-bottom: 3px solid #b0b3b5;   
	
}

 .loginAnchor a.active{border-bottom:3px solid #2681ca;}